<h1 class="mt-3">Tabla de retorno del interes compuesto</h1>

{{#if cuotas}}
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Periodo</th>
            <th scope="col">Depositos</th>
            <th scope="col">Interes ({{tasaInteres}}%)</th>
            <th scope="col">Saldo final</th>
        </tr>
    </thead>
    <tbody>
        {{#each cuotas}}
        <tr>
            <th scope="row">{{Periodo}}</th>
            <th scope="row">{{Depositos}}</th>
            <th scope="row">{{Interes}}</th>
            <th scope="row">{{Saldo}}</th>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/if}}

<a href="/" class="btn btn-primary mt-3">Regresar</a>